package evchargingstore.repository;

import org.springframework.stereotype.Repository;

import evchargingstore.entity.ChargingSessionInfo;

import java.util.Date;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;

@Repository
public interface ChargingSessionRepository extends CrudRepository<ChargingSessionInfo, String> {

	@Query(value = "select count(id) from charging where startedAt > ?1", nativeQuery = true)
	public int countByStartedAt(Date startedAt);

	@Query(value = "select count(id) from charging where suspendedAt > ?1", nativeQuery = true)
	public int countBySuspendedAt(Date suspendedAt);
}