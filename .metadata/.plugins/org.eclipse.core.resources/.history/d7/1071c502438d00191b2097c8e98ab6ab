package evchargingstore.entity;

import java.util.Date;

import javax.persistence.Entity;
import javax.persistence.Id;

import com.fasterxml.jackson.databind.annotation.JsonDeserialize;
import com.fasterxml.jackson.databind.annotation.JsonSerialize;

import evchargingstore.util.CustomDateDeserializer;
import evchargingstore.util.CustomDateSerializer;

@Entity
public class ChargingSessionInfo {
	@Id
	private String id;
	private Date startedAt;
	private Date suspendedAt;
	private ChargingSessionStatus status;

	public String getId() {
		return id;
	}

	@JsonDeserialize(using = CustomDateDeserializer.class)
	@JsonSerialize(using = CustomDateSerializer.class)
	public Date getStartedAt() {
		return startedAt;
	}

	public void setStartedAt(Date at) {
		this.startedAt = at;
	}

	@JsonDeserialize(using = CustomDateDeserializer.class)
	@JsonSerialize(using = CustomDateSerializer.class)
	public Date getSuspendedAt() {
		return suspendedAt;
	}

	public void setSuspendedAt(Date at) {
		this.suspendedAt = at;
	}

	public ChargingSessionStatus getStatus() {
		return status;
	}

	public void setStatus(ChargingSessionStatus status) {
		this.status = status;
	}
}
